@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>
<p>
    <a class="btn btn-primary" href="@Url.Action("New", "Movies")">NEW MOVIE</a>
</p>

@if (!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table id="movies" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Edit", "Movies", new {id = movie.Id}, null)
                </td>
                <td>@movie.Genre.Name</td>
                <td>
                    <button class="btn-link js-delete-movie" data-movie-id="@movie.Id">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document)
            .ready(function() {
                $("#movies")
                    .on("click",
                        ".js-delete-movie",
                        function() {
                            var button = $(this);

                            bootbox.confirm("Are you sure you want to delete this movie?",
                                function(result) {
                                    if (result) {
                                        $.ajax({
                                                url: "/api/movies/" + button.attr("data-movie-id"),
                                                method: "DELETE"
                                            })
                                            .done(function() {
                                                button.parents("tr")
                                                    .fadeOut(function() {
                                                        $(this).remove();
                                                    });
                                            })
                                            .fail(function() {
                                                bootbox.alert("Something went wrong");
                                            });
                                    }
                                });

                        });
            });
    </script>
}




